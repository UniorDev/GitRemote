<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:customClasses="clr-namespace:GitRemote.CustomClasses;assembly=GitRemote"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GitRemote.Views.ChooseUserPage"
             Title ="Existing Users">
  <ListView x:Name="ListOfUsers"
            ItemsSource="{Binding Users}"
            VerticalOptions="Fill"
            HasUnevenRows="False"
            SeparatorVisibility="None">

    <ListView.ItemTemplate>
      <DataTemplate>
        <customClasses:NativeCell UserName="{Binding }"
                                  Command="{Binding Source={x:Reference Name=ListOfUsers},
                                    Path=BindingContext.ListItemTappedCommand}"
                                  ChangeBackgroundWhenSelected="True"
                                  BackgroundColorWhenSelected="{StaticResource NativeCellAndroidBackgroundColorWhenSelected}"
                                 />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>

</ContentPage>