<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:b="clr-namespace:Xamarin.Behaviors;assembly=Xamarin.Behaviors"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GitRemote.Views.MasterPage"
             Title="Necessary">

  <RelativeLayout x:Name="MasterMenu">

    <BoxView x:Name="GrayHeader"
             Color="#CACED2"
             RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1}"
             RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=1}"
             RelativeLayout.WidthConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
             RelativeLayout.HeightConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.2}"/>
    

    <Image x:Name="MasterProfileImage"
           WidthRequest="50"
           HeightRequest="50"
           Source="ic_account_circle_white_24dp.png"
           RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1, Constant=15}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=1, Constant=15}"/>
    
    <Image x:Name="LogOutImage"
           WidthRequest="35"
           HeightRequest="35"
           Source="ic_menu_logout.png"
           RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-60}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=1, Constant=25}">
      <Image.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding ExitCommand}"
                              NumberOfTapsRequired="1"/>
      </Image.GestureRecognizers>
      </Image>
    
    <Label x:Name="MasterProfileName"
           Text="GitRemote"
           FontAttributes="Bold"
           FontSize="18"
           TextColor="Black"
           RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1, Constant=15}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToView, ElementName=LogOutImage, Property=Y, Factor=1, Constant=55}"/>
    
    <RelativeLayout
      XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1}"
      YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.2, Constant=10}"
      WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=15}"
      HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=MasterProfileImage, Property=Height, Factor=1}">
      
      <Image x:Name="GistsImage"  BackgroundColor="Blue"
           WidthRequest="20"
           HeightRequest="20"
           Source="{Binding GistsPageImagePath}"
           RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1, Constant=15}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=1, Constant=10}"/>
      <Label x:Name="GistsLabel"  BackgroundColor="Fuchsia"
           Text="Gists"
           FontSize="16"
           TextColor="Black"
           RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToParent, Property=X, Factor=1, Constant=50}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToParent, Property=Y, Factor=1}"/>
      <!--RelativeLayout.XConstraint ="{ConstraintExpression Type=RelativeToView, ElementName=GistsImage, Property=X, Factor=1, Constant=50}"
           RelativeLayout.YConstraint ="{ConstraintExpression Type=RelativeToView, ElementName=GistsImage, Property=Y, Factor=1}"-->
        <RelativeLayout.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding GistsCommand}" NumberOfTapsRequired="1"/>
      </RelativeLayout.GestureRecognizers>
    </RelativeLayout> 
 </RelativeLayout>

</ContentPage>